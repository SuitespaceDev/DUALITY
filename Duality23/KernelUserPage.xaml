            <local:UserBlock Label="DEBUG MODULE HVID" Value="{}{XXXXXXXX-XXXX-XXXX-XXXX-XXXXXXXXXXXX}"/>
            <local:UserCombo Label="DEBUG MODULE MMM"/>
            <local:UserCombo Label="DEBUG MODULE NAME"/>
