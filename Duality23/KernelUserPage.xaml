            <local:UserBlock Label="QUERY MODULE CREATED TIME" Value="17:04"/>
            <local:UserBlock Label="QUERY MODULE SAVED DATE" Value="11/11/2022"/>
            <local:UserBlock Label="QUERY MODULE SAVED TIME" Value="17:04"/>
            <local:UserBlock Label="QUERY MODULE OPENED DATE" Value="11/11/2022"/>
            <local:UserBlock Label="QUERY MODULE OPENED TIME" Value="17:04"/>

