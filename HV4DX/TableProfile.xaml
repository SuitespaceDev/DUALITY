<UserControl
    x:Class="HV4DX.TableProfile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HV4DX"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid 
        Margin="6,6,6,6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="32"/>
        </Grid.RowDefinitions>

        <local:UserFilterNew
            Grid.Column="0" Grid.ColumnSpan="1" 
            Grid.Row="0" Grid.RowSpan="1"
            Label="{x:Bind LabelProfileHVID, Mode=OneTime}"
            SelectedItem="{x:Bind IndexProfileHVID, Mode=TwoWay}"
            ItemList="{x:Bind ListProfileHVID, Mode=TwoWay}"/>

        <local:UserFilterMMM
            Grid.Column="0" Grid.ColumnSpan="1" 
            Grid.Row="1" Grid.RowSpan="1"
            Label="{x:Bind LabelProfileMMM, Mode=OneTime}"
            ValueMIL="{x:Bind ValueProfileMIL, Mode=TwoWay}"
            ValueMAJ="{x:Bind ValueProfileMAJ, Mode=TwoWay}"
            ValueMIN="{x:Bind ValueProfileMIN, Mode=TwoWay}"/>

        <local:UserFilterItem
            Grid.Column="0" Grid.ColumnSpan="1" 
            Grid.Row="2" Grid.RowSpan="1"
            Label="{x:Bind LabelProfileMaxPath, Mode=OneTime}"
            SelectedItem="{x:Bind IndexProfileMaxPath, Mode=TwoWay}"
            ItemList="{x:Bind ListProfileMaxPath, Mode=TwoWay}"/>

        <local:UserDateTime 
            Grid.Column="1" Grid.ColumnSpan="1" 
            Grid.Row="0" Grid.RowSpan="1"
            Label="{x:Bind LabelProfileCreated, Mode=OneTime}"
            Value="{x:Bind ValueProfileCreated, Mode=OneWay}"/>

        <local:UserDateTime 
            Grid.Column="1" Grid.ColumnSpan="1" 
            Grid.Row="1" Grid.RowSpan="1"
            Label="{x:Bind LabelProfileSaved, Mode=OneTime}"
            Value="{x:Bind ValueProfileSaved, Mode=OneWay}"/>

        <local:UserDateTime 
            Grid.Column="1" Grid.ColumnSpan="1" 
            Grid.Row="2" Grid.RowSpan="1"
            Label="{x:Bind LabelProfileOpened, Mode=OneTime}"
            Value="{x:Bind ValueProfileOpened, Mode=OneWay}"/>

    </Grid>
    
</UserControl>
