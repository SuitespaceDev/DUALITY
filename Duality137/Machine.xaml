            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="108"/>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="32"/>
                </Grid.RowDefinitions>

                <HV4DX:UserDivider
                    Grid.Column="0" Grid.ColumnSpan="1"
                    Grid.Row="0" Grid.RowSpan="1"/>

                <HV4DX:TableProfile
                    Grid.Column="0" Grid.ColumnSpan="1"
                    Grid.Row="1" Grid.RowSpan="1"
                    LabelProfileHVID="PROFILE HVID"
                    ValueProfileHVID="{StaticResource xValueLvl1ProfileHVID}"
                    LabelProfileMMM="PROFILE MMM"
                    ValueProfileMIL="{StaticResource xValueLvl1ProfileMIL}"
                    ValueProfileMAJ="{StaticResource xValueLvl1ProfileMAJ}"
                    ValueProfileMIN="{StaticResource xValueLvl1ProfileMIN}"
                    LabelProfileMaxPath="PROFILE"
                    ValueProfileMaxPath="{StaticResource xValueLvl1ProfileMaxPath}"
                    LabelProfileCreated="PROFILE CREATED"
                    ValueProfileCreated="{StaticResource xValueLvl1ProfileCreated}"
                    LabelProfileSaved="PROFILE SAVED"
                    ValueProfileSaved="{StaticResource xValueLvl1ProfileSaved}"
