            <Button Background="{StaticResource HV4DPropertyPageGrey}"
                Content="Apply" 
                Grid.Column="6" Grid.ColumnSpan="1"
                Grid.Row="0" Grid.RowSpan="2"
                Margin="10,10,0,10"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Click="Apply_Click"/>

            <Button Background="{StaticResource HV4DPropertyPageGrey}"
                Content="Exit" 
                Grid.Column="7" Grid.ColumnSpan="1"
                Grid.Row="0" Grid.RowSpan="2"
                Margin="10,10,0,10"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Click="Exit_Click"/>

