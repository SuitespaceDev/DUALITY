                                AcceptsReturn="True" 
                                TextWrapping="Wrap"
                                HorizontalAlignment="Stretch"  
                                VerticalAlignment="Stretch"
                                FontWeight="Medium"
                                FontSize="12"
                                Height="500"
                                Padding="3,3,3,3"
                                PlaceholderText="Add description here ..."
                                ScrollViewer.VerticalScrollBarVisibility="Visible"/>

                        </Border>

                    </StackPanel>

                </TabViewItem>

                <TabViewItem
                    Header="FTP IPv6"
                    IsClosable="False">

                    <StackPanel>

                        <HV4DX:TableAccountPostgreSQL/>

                        <HV4DX:UserDivider/>

                        <Border 
                            x:Name="ProfileDescriptionFTPIPv6"
                            BorderBrush="{ThemeResource HV4DButtonBorderStandard}"
                            BorderThickness="2"
                            Grid.Column="0" Grid.ColumnSpan="4" 
                            Grid.Row="9" Grid.RowSpan="5"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Margin="3,3,3,3"
                            Padding="0,0,0,0">

                            <TextBox 
                                Foreground="Black"
                                AcceptsReturn="True" 
                                TextWrapping="Wrap"
                                HorizontalAlignment="Stretch"  
                                VerticalAlignment="Stretch"
                                FontWeight="Medium"
                                FontSize="12"
                                Height="500"
                                Padding="3,3,3,3"
                                PlaceholderText="Add description here ..."
                                ScrollViewer.VerticalScrollBarVisibility="Visible"/>

                        </Border>

                    </StackPanel>

                </TabViewItem>

                <TabViewItem
                    Header="SFTP IPv4"
                    IsClosable="False">

                    <StackPanel>

                        <HV4DX:TableAccountPostgreSQL/>

                        <HV4DX:UserDivider/>

                        <Border 
                            x:Name="ProfileDescriptionSFTPIPv4"
                            BorderBrush="{ThemeResource HV4DButtonBorderStandard}"
                            BorderThickness="2"
                            Grid.Column="0" Grid.ColumnSpan="4" 
                            Grid.Row="9" Grid.RowSpan="5"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Margin="3,3,3,3"
                            Padding="0,0,0,0">

                            <TextBox 
                                Foreground="Black"
