<Page
    x:Class="Duality137.Level2AccountPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Duality137"
    xmlns:HV4DUX="using:HV4DUX"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///HV4DUX.xaml"/>
                <ResourceDictionary Source="ms-appx:///DHV4DENTERPRISE.xaml"/>
                <ResourceDictionary Source="ms-appx:///DHV4DADMIN.xaml"/>
                <ResourceDictionary Source="ms-appx:///DHV4DADMINDB.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <ScrollViewer>

        <StackPanel>

            <HV4DUX:TableAccount
                LabelAccountHVID="ACCOUNT HVID"
                ValueAccountHVID="{StaticResource xValueAccountHVID}"
                LabelAccountID="ACCOUNT ID"
                ValueAccountID="{StaticResource xValueAccountID}"
                LabelAccountMaxPath="ACCOUNT"
                ValueAccountMaxPath="{StaticResource xValueAccountMaxPath}"
                LabelAccountCreated="ACCOUNT CREATED"
                ValueAccountCreated="{StaticResource xValueAccountCreated}"
                LabelAccountUpdated="ACCOUNT UPDATED"
                ValueAccountUpdated="{StaticResource xValueAccountUpdated}"
                LabelAccountPassword="ACCOUNT PASSWORD"
                ValueAccountPassword="{StaticResource xValueAccountPassword}"/>

            <HV4DUX:UserDivider/>

            <HV4DUX:TableAccountDB
                LabelAccountDBHost="DATABASE HOST"
                ValueAccountDBHost="{StaticResource xValueAccountDBHost}"
                LabelAccountDBRole="ACCOUNT ROLE"
                ValueAccountDBRole="{StaticResource xValueAccountDBRole}"
                LabelAccountDBPort="DATABASE PORT"
                ValueAccountDBPort="{StaticResource xValueAccountDBPort}"
                LabelAccountDBSSLMode="DATABASE SSL MODE"
                ValueAccountDBSSLMode="{StaticResource xValueAccountDBSSLMode}"
                LabelAccountDBSSLClientCert="SSL CLIENT CERT"
                ValueAccountDBSSLClientCert="{StaticResource xValueAccountDBSSLClientCert}"
                LabelAccountDBSSLClientKey="SSL CLIENT KEY"
                ValueAccountDBSSLClientKey="{StaticResource xValueAccountDBSSLClientKey}"
                LabelAccountDBSSLRootCert="SSL ROOT CERT"
                ValueAccountDBSSLRootCert="{StaticResource xValueAccountDBSSLRootCert}"/>

            <HV4DUX:UserDivider/>

            <HV4DUX:TableContact
                LabelAccount="USER NAME"
                ValueAccount="Administrator"
                LabelAddressOne="ADDRESS ONE"
                ValueAddressOne="{StaticResource xValueAddressOne}"
                LabelAddressTwo="ADDRESS TWO" 
                ValueAddressTwo="{StaticResource xValueAddressTwo}"
                LabelCity="CITY"
                ValueCity="{StaticResource xValueCity}"
                LabelRegion="REGION"
                ValueRegion="{StaticResource xValueRegion}"
                LabelEMail="EMAIL"
                ValueEMail="{StaticResource xValueEMail}"
                LabelPrimaryPhone="PRIMARY NUMBER"
                ValuePrimaryPhone="{StaticResource xValuePrimaryPhone}"
                LabelSecondaryPhone="SECONDARY NUMBER"
                ValueSecondaryPhone="{StaticResource xValueSecondaryPhone}"/>

            <HV4DUX:UserDivider/>

            <Border x:Name="ProfileDescription"
                BorderBrush="{ThemeResource HV4DButtonBorderStandard}"
                BorderThickness="2"
                Grid.Column="0" Grid.ColumnSpan="4" 
                Grid.Row="9" Grid.RowSpan="5"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Margin="3,3,3,3"
                Padding="0,0,0,0">

                <TextBox Foreground="Black"
                         AcceptsReturn="True" 
                         TextWrapping="Wrap"
                         HorizontalAlignment="Stretch"  
                         VerticalAlignment="Stretch"
                         FontWeight="Medium"
                         FontSize="12"
                         Height="500"
                         Padding="3,3,3,3"
                         PlaceholderText="Add description here ..."
                         ScrollViewer.VerticalScrollBarVisibility="Visible"/>

            </Border>

            <Grid Height="60"
                  Grid.Column="0" Grid.ColumnSpan="2"
                  Grid.Row="14" VariableSizedWrapGrid.RowSpan="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Background="{StaticResource HV4DPropertyPageGrey}"
                Content=""
                Grid.Column="0" Grid.ColumnSpan="1"
                Margin="3,3,3,3"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"/>

                <Button Background="{StaticResource HV4DPropertyPageGrey}"
                Content="" 
                Grid.Column="1" Grid.ColumnSpan="1"
                Margin="3,3,3,3"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"/>

                <Button Background="{StaticResource HV4DPropertyPageGrey}"
                Content="" 
                Grid.Column="2" Grid.ColumnSpan="1"
                Margin="3,3,3,3"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"/>

                <Button Background="{StaticResource HV4DPropertyPageGrey}"
                Content="" 
                Grid.Column="3" Grid.ColumnSpan="1"
                Margin="3,3,3,3"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"/>

            </Grid>

        </StackPanel>

    </ScrollViewer>

</Page>
