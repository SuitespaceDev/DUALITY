                                HorizontalAlignment="Stretch"  
                                VerticalAlignment="Stretch"
                                FontWeight="Medium"
                                FontSize="12"
                                Height="500"
                                Padding="3,3,3,3"
                                PlaceholderText="Add description here ..."
                                ScrollViewer.VerticalScrollBarVisibility="Visible"/>

                        </Border>

                    </StackPanel>

                </TabViewItem>

                <TabViewItem
                    Header="SFTP IPv6"
                    IsClosable="False">

                    <StackPanel>

                        <HV4DX:TableAccountPostgreSQL/>

                        <HV4DX:UserDivider/>

                    </StackPanel>

                </TabViewItem>

            </TabView>

            <HV4DX:UserDivider
                    Grid.Column="0" Grid.ColumnSpan="1"
                    Grid.Row="4" Grid.RowSpan="1"/>

        </StackPanel>

    </ScrollViewer>

</Page>
